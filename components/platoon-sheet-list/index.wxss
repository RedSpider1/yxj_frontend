.container {
  margin-top: 20px;
}

.subContainer {
  margin: 0 20px;
}

.title {
	color: rgba(80, 80, 80, 1);
	font-size: 16px;
	line-height: 150%;
	text-align: left;
	font-weight: bold;
}

.status {
  background-color: rgba(45, 180, 193, 1);
  color: white;
	border-radius: 16px;
  text-align: center;
	font-size: 13px;
	line-height: 200%;
}

.subtitle {
  color: rgba(134, 128, 128, 1);
  font-size: 10px;
  line-height: 150%;
  text-align: left;
  margin-top: 10px;
}

.content {
  margin-top: 10px;
  color: rgba(80, 80, 80, 1);
	font-size: 12px;
	line-height: 150%;
	text-align: left;
}

.hide {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.person {
  text-align: center;
  color: rgba(45, 180, 193, 1);
}