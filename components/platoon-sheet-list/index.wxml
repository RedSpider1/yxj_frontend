<scroll-view scroll-y='true' style="height: {{height}}px;" bindscrolltolower="list">
  <view wx:for="{{wrapperItems}}" class="subContainer" wx:key="id" bindtap="jmp" data-id="{{item.id}}">
    <van-row>
      <van-col span="16">
        <view class="hide title primary">
          {{item.title}}
        </view>
      </van-col>
      <van-col span="8">
        <view class="flex justify-end">
          <van-tag type="{{item.statusTagType}}" size="medium">{{item.statusLabel}}</van-tag>
        </view>
      </van-col>
    </van-row>

    <!-- 如果有图片就这样搞，否则就占满 -->
    <van-row>
      <van-col span="16">
        <view class="van-multi-ellipsis--l2 subtitle">
          {{item.introduction}}
        </view>

        <view class="create-info">
          {{item.ownerInfo.name + ' ' + item.startTime}}
        </view>
      </van-col>
      <van-col span="8">
        <view class="flex align-items-end">
          <image class="img" mode="aspectFill" src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg"></image>
        </view>
      </van-col>
    </van-row>

