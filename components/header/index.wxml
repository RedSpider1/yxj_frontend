<!--components/header-default/index.wxml-->
<view class="header" id="header">
  <van-nav-bar
    title="{{title}}"
    style="--nav-bar-background-color: {{color}}; --nav-bar-icon-color: white; --nav-bar-title-text-color: white;"
    fixed
    placeholder
    class="nav-bar"
  >
  <van-icon name="arrow-left" slot="left" class="left-icon" wx:if="{{needReturn}}" ontap="back"/>
  <van-icon name="wap-home-o" slot="left" class="left-icon" wx:if="{{needReturn}}" ontap="home"/>
</van-nav-bar>
</view>
