.title {
  color: rgba(56, 56, 56, 1);
	font-size: 20px;
	line-height: 150%;
	text-align: center;
  font-weight: bold;
  margin-bottom: 20px;
}

.firstAuthorNameChar {
  --tag-primary-color: #52bad1; 
  --tag-font-size: 14px; 
  --tag-text-color: white;
}

.author-name {
  color: rgba(42, 130, 228, 1);
  margin-left: 5px;
  font-size: 16px;
}

.examineTime, .expireTime, .labelArray {
  color: rgba(80, 80, 80, 1);
	font-size: 14px;
	line-height: 150%;
  text-align: left;
  margin-bottom: 10px;
}

.countDownTime {
  color: rgba(80, 80, 80, 1);
	font-size: 14px;
	line-height: 150%;
  text-align: left;
  margin-bottom: 10px;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.personRateDesc {
  color: rgba(42, 130, 228, 1);
	font-size: 14px;
	line-height: 150%;
  text-align: center;
  margin-bottom: 10px;
}

.label {
  margin-bottom: 5px;
  margin-right: 5px;
}

.introduce {
	line-height: 150%;
}

.joiner {
  display: flex; 
  flex-direction: row; 
  justify-content: space-between;
  margin-bottom: 10px;
  font-size: 14px;
  color: rgba(80, 80, 80, 1);
  line-height: 250%;
}

.noJoiner {
  text-align: center; 
  color: gray;
  font-size: 14px;
}

.btnGroup {
  position: fixed;
  left: 0;
  width: 100%;
  bottom: 50px;
}



.margin-v {
  margin: 1em 0;
}
.count-down {
  margin-right: 5px;
}
.van-circle__text {
  z-index: -1;
  font-size: .6rem;
}
.van-tabs__scroll {
  margin: 0 !important;
}
.joiner-item {
  border-bottom: 1px dashed var(--primary);
  margin: .5rem 0;
  padding-bottom: .5rem;
}
.contact {
  text-align: right;
  color: grey;
}
.record-item {
  border-bottom: 1px dashed var(--primary);
  margin: .5rem 0;
  padding-bottom: .5rem;
}
.tab-item {
  min-height: 800px;
}
.record-tag {
  margin-left: 10px;
}