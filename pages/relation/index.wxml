<header title="友小聚 - 相关" id="header"></header>
<view class="flex-col" style="height: {{containerHeight}}px;">
  <view class="flex-1 flex">
    <view ontap="jmp" data-type="view" class="flex-1 flex-col justify-center align-items-center white relation-item">
      <van-icon name="eye-o" class="primary" size="2rem" />
      <text class="container-v primary">我浏览过</text>
    </view>
    <view ontap="jmp" data-type="join" class="flex-1 flex-col justify-center align-items-center white relation-item"
      >
      <van-icon name="passed" class="primary" size="2rem" />
      <text class="container-v primary">我参与的</text>
    </view>
  </view>
  <view class="flex-1 flex">
    <view ontap="jmp" data-type="create" class="flex-1 flex-col justify-center align-items-center white relation-item">
      <van-icon name="add-o" class="primary" size="2rem" />
      <text class="container-v primary">我创建的</text>
    </view>
    <view ontap="jmp" data-type="star" class="flex-1 flex-col justify-center align-items-center white relation-item">
      <van-icon name="star-o" class="primary" size="2rem" />
      <text class="container-v primary">我收藏的</text>
    </view>
  </view>
  <footer id="footer" name="view"></footer>
</view>