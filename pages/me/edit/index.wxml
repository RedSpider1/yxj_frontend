<header title="编辑个人信息" needReturn="{{true}}"></header>
<view>
  <view class="deliver">
    <van-row>
      <van-col span="24">
        <view class="headImg">
          <van-uploader file-list="{{avatar}}" bind:after-read="afterRead" max-count="{{1}}">
            <van-image round width="100px" height="100px" lazy-load fit="cover" src="{{userInfo.img}}" />
          </van-uploader>
          <view class="flex justify-center">
            <button class="btn primary-bg">上传头像</button>
          </view>
          <view class="flex justify-center">
            <button class="btn primary-bg" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">微信同步</button>
          </view>
        </view>
      </van-col>
    </van-row>
  </view>
  <view style="margin-top: 18px;">
    <van-cell-group title="联系方式">
      <van-cell value="{{userInfo.phoneNum}}" icon="phone" label="手机号(不可修改)"/>
      <van-field value="{{userInfo.wechatNum}}" left-icon="wechat" label="微信号" class="field" />
    </van-cell-group>
    <van-cell-group title="个人信息">
    <van-field value="{{userInfo.nickName}}" label="昵称" class="field" left-icon="friends"/>
    <van-cell value="{{userInfo.sex}}" title="性别" bind:click="editSex" is-link  icon="smile"/>
    <van-action-sheet show="{{ showSexSheet }}" actions="{{ sexOptions }}" bind:select="onSelectSex"
      bind:close="closeSex" />
    <van-cell value="{{userInfo.birthday}}" title="生日" is-link bind:click="editBirthday"  icon="fire" />
    <van-action-sheet show="{{ showBirthdaySheet }}" title="选择生日" bind:close="closeBirthday">
      <view>
        <van-datetime-picker type="datetime" type="date" value="{{ defaultValue }}" min-date="{{ minBirthday }}" max-date="{{ maxBirthday }}"
      bind:confirm="onSelectBirthday" bind:cancel="closeBirthday"/>
      </view>
    </van-action-sheet>
    <van-field value="{{userInfo.slogan}}" label="个性签名" type="textarea" autosize class="field" show-word-limit
      maxlength="50"  left-icon="audio"/>
    </van-cell-group>

  </view>
  <view class="flex justify-center">
    <button class="btn primary-bg" bindtap="saveUserInfo">保存</button>
  </view>
</view>
<van-toast id="van-toast" />
